{
    "name": "chemaclass/stock-ticker",
    "description": "An API to gather the latest info from your stocks",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "ticker",
        "news",
        "finance",
        "yahoo",
        "crawler",
        "api"
    ],
    "require": {
        "php": ">=7.4",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-zip": "*",
        "symfony/http-client": "^5.2",
        "symfony/mailer": "^5.2",
        "twig/twig": "^3.1",
        "symfony/dom-crawler": "^5.2",
        "symfony/css-selector": "^5.2",
        "symfony/console": "^5.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "symfony/var-dumper": "^5.2",
        "symfony/google-mailer": "^5.2",
        "vimeo/psalm": "^4.3",
        "vlucas/phpdotenv": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Chemaclass\\StockTicker\\": "src/StockTicker/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chemaclass\\StockTickerTests\\": "tests/StockTicker/"
        }
    },
    "scripts": {
        "test-all": [
            "@test-quality",
            "@test-unit"
        ],
        "test-quality": [
            "@csrun",
            "@psalm"
        ],
        "test-unit": "./vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html coverage",
        "psalm": "./vendor/bin/psalm",
        "csfix": "./vendor/bin/php-cs-fixer fix",
        "csrun": "./vendor/bin/php-cs-fixer fix --dry-run"
    }
}
